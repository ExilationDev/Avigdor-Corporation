<application xmlns="http://ns.adobe.com/air/application/32.0">
  <id>com.macharoni.pixeldarkness</id>
  <versionNumber>1.0</versionNumber>
  <filename>Pixel Purge</filename>
  <description/>
  <name>Pixel Purge</name>
  <copyright/>
  <initialWindow>
    <content>main.swf</content>
    <systemChrome>standard</systemChrome>
    <transparent>false</transparent>
    <visible>true</visible>
    <fullScreen>false</fullScreen>
    <aspectRatio>portrait</aspectRatio>
    <renderMode>auto</renderMode>
    
    
    <maximizable>true</maximizable>
    <minimizable>true</minimizable>
    <resizable>true</resizable>
    <width>800</width>
    <height>600</height>
  </initialWindow>
  <icon>
    <image16x16>sprites/gameIcons/swatHead16x16.png</image16x16>
    <image32x32>sprites/gameIcons/swatHead32x32.png</image32x32>
    <image48x48>sprites/gameIcons/swatHead48x48.png</image48x48>
    <image128x128>sprites/gameIcons/swatHead128x128.png</image128x128>
  </icon>
  <customUpdateUI>false</customUpdateUI>
  <allowBrowserInvocation>false</allowBrowserInvocation>
  <supportedProfiles>desktop extendedDesktop </supportedProfiles>
</application>
